@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Management System</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Animate.css for Animations -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

  <style>
    /* Hero Section */
    .hero {
      background: url('/Images/Books/background.jpg');
      min-height: 100vh;
      display: flex;
      align-items: center;
      color: white;
      padding: 50px 0;
      position: relative;
    }

    /* Glassmorphic Card */
    .glass-card {
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    /* Hero Title */
    .hero-title {
      font-size: 3.5rem;
      font-weight: bold;
      line-height: 1.2;
      text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
    }

    /* Hero Text */
    .hero-text {
      font-size: 1.2rem;
      margin-top: 10px;
      text-shadow: 1px 1px 8px rgba(0, 0, 0, 0.6);
    }

    /* Buttons */
    .btn-outline-light {
      border-color: white;
      color: white;
    }

    .btn-outline-light:hover {
      background-color: white;
      color: black;
    }

    /* Responsive Styling */
    @@media (max-width: 768px) {
      .hero-title {
        font-size: 2.5rem;
      }

      .glass-card {
        margin-top: 30px;
      }
    }
  </style>
</head>

<body>
  <!-- Hero Section -->
  <div class="hero d-flex align-items-center">
    <div class="container text-center text-md-start">
      <div class="row">
        <div class="col-md-6">
          <h1 class="hero-title animate__animated animate__fadeInDown">
            Explore a World of Knowledge
          </h1>
          <p class="hero-text lead mt-3 animate__animated animate__fadeInUp animate__delay-1s">
            Your personal gateway to thousands of books, journals, and resources. Seamlessly manage borrowing and returns with our intuitive platform.
          </p>
          <div class="mt-4">
            <a href="/Home/ExploreLibrary" class="btn btn-primary btn-lg me-3 animate__animated animate__zoomIn animate__delay-2s">
              Explore Library
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
