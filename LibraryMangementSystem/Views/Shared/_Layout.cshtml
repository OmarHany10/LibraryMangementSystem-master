<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibraryMangementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibraryMangementSystem.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-expand-lg  navbar-light bg-light border-bottom shadow-sm mb-3">
        <div class="container-fluid">
            <!-- Brand -->
           
                @if (User.IsInRole("Admin") || User.IsInRole("Members") || User.IsInRole("Librarians"))
                {
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index2">
                        📚 Library Management
                    </a>
                }
                else
                {
                    <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        📚 Library Management
                    </a>
                }


            <!-- Toggler for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" 
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                  @* *@
                    @if (User.IsInRole("Admin"))
                    {
                            <!-- Home Link -->
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index2">
                                    🏠 Home
                                </a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Index">📖 Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Checkout" asp-action="Index">🛒 Checkout</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Role" asp-action="GetAllUsers">👥 Roles</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Search">🔍 Search Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="SignOut">🚪 Sign Out</a>
                        </li>
                    }
                    else if (User.IsInRole("Librarians"))
                    {
                            <!-- Home Link -->
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index2">
                                    🏠 Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Index">📖 Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Checkout" asp-action="Index">🛒 Checkout</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Book" asp-action="Search">🔍 Search Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Account" asp-action="SignOut">🚪 Sign Out</a>
                            </li>
                    }
                    else if (User.IsInRole("Members"))
                    {
                            <!-- Home Link -->
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index2">
                                    🏠 Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="MemberInformation">👤 Information</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="Search">📖 Available Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="BorrowingHistory">⏳ Borrowing History</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Member" asp-action="MyBorrowedBook">📚 Borrowed Book</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="SignOut" class="text-danger">🚪 Sign Out</a>
                            </li>
                    }
                    else
                    {
                            <!-- Home Link -->
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                                    🏠 Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">👤 Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">📝 Register</a>
                            </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



