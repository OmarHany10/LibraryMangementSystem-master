@model IEnumerable<LibraryMangementSystem.ViewModels.UsersAndRolesViewModel>

@{
    ViewData["Title"] = "GetAllUsers";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Get All Users</h1>

    <table class="table table-hover table-responsive">
        <thead class="table-dark text-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>Roles</th>
                <th>Assign To Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@string.Join(", ", item.Roles)</td>
                    <td>
                        <a asp-action="AssignToRole" asp-route-UserName="@item.UserName" class="btn btn-primary btn-sm">Assign</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

 
</div>
