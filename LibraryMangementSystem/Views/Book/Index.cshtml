@model IEnumerable<LibraryMangementSystem.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center my-4">Book Collection</h1>

<div class="container">
    <div class="row">
        <p>
            <a asp-action="Add" class="btn btn-primary">Add New Book</a>
        </p>
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-3 mb-3">
                <!-- Change column size to col-sm-6 for smaller cards -->
                <div class="card" style="width: 100%; height: 100%; padding: 0.5rem;">
                    <!-- Reduced padding -->
                    <img src="/Images/Books/@item.Image" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.Title)" style="height: 440px; object-fit: cover;" /> <!-- Limit image height -->
                    <div class="card-body" style="padding: 0.5rem;">
                        <!-- Reduced card body padding -->
                        <h6 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h6>
                        <p class="card-subtitle mb-1 text-muted">
                            @Html.DisplayFor(modelItem => item.Author)
                        </p>
                        <a href="/Book/Details/@item.BookId" class="btn btn-primary">Details</a>
                        <a href="/Book/Delete/@item.BookId" class="btn btn-danger">Delete</a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

