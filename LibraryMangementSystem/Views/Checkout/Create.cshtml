@model Checkout
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create Checkout</h1>

    <form asp-action="SaveCreate" method="post" class="bg-light p-4 rounded shadow">
        <div class="form-group mb-3">
            <label for="bookId" class="form-label">Select Book</label>
            <select asp-for="BookId" class="form-control" asp-items="@(new SelectList(ViewData["Books"] as IEnumerable<LibraryMangementSystem.Models.Book>, "BookId", "Title"))">
                <option value="">-- Select a Book --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="memberId" class="form-label">Select Member</label>
            <select asp-for="MemberId" class="form-control" asp-items="@(new SelectList(ViewData["Members"] as IEnumerable<LibraryMangementSystem.Models.Member>, "MemberId", "FirstName"))">
                <option value="">-- Select a Member --</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="dueDate" class="form-label">Due Date and Time</label>
            <input asp-for="DueDate" class="form-control" type="datetime-local" id="dueDate" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Checkout Book</button>
        </div>
    </form>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


