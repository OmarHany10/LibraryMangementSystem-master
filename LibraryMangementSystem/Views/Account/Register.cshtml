    <!DOCTYPE html>
    <html lang="en" dir="ltr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> Responsive Registration Form | CodingLab </title>
        <link rel="stylesheet" href="/css/signup.css">

    </head>
    <body>
        <div class="container">
            <!-- Title section -->
            <div class="title">Registration</div>
            <div class="content">
                <!-- Registration form -->
                <form asp-action="SaveRegister">
                    <div class="user-details">
                        <!-- Input for User Name -->
                        <div class="input-box">
                            <span class="details">User Name</span>
                            <input type="text" placeholder="Enter Username" asp-for="UserName"
                            required>
                            <span asp-validation-for="UserName" class="text-danger"></span>

                        </div>
                        <!-- Input for First Name -->
                        <div class="input-box">
                            <span class="details">First Name</span>
                            <input type="text" placeholder="Enter your First Name" asp-for="FirstName"
                            required>
                            <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div> 
                        <!-- Input for Last Name -->
                        <div class="input-box">
                            <span class="details">Last Name</span>
                            <input type="text" placeholder="Enter your Last Name" asp-for="LastName"
                            required>
                            <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                        <!-- Input for Address  -->
                        <div class="input-box">
                            <span class="details">Address</span>
                            <input type="text" placeholder="Enter your Address" asp-for="Address"
                            required>
                            <span asp-validation-for="Address" class="text-danger"></span>

                        </div>
                        <!-- Input for Phone Number -->
                        <div class="input-box">
                            <span class="details">Phone Number</span>
                            <input type="text" placeholder="Enter your phone number" asp-for="Phone"
                            required>
                            <span asp-validation-for="Phone" class="text-danger"></span>

                        </div>
                        <!-- Input for DateOfBirth -->
                        <div class="input-box">
                            <span class="details">DateOfBirth</span>
                            <input type="date" placeholder="Enter your number" asp-for="DateOfBearth"
                            required>
                            <span asp-validation-for="DateOfBearth" class="text-danger"></span>

                        </div>
                        <!-- Input for Password -->
                        <div class="input-box">
                            <span class="details">Password</span>
                            <input type="password" placeholder="Enter your password" asp-for="Password"
                            required>
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <!-- Input for Confirm Password -->
                        <div class="input-box">
                            <span class="details">Confirm Password</span>
                            <input type="password" placeholder="Confirm your password"  asp-for="ConfirmPassword"
                            required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>
                    </div>
                    <!-- Submit button -->
                    <a href="booksaw-1.0.0/index.html">
                        <div class="button">
                            <input type="submit" value="Register now">
                        </div>
                    </a>
                    <div class="gologin">
                        <a href="login.html" style="color: black; text-decoration: none;">Already have an account? <span style="color: #977558;">login</span></a>
                    </div>
                </form>
            </div>
        </div>
        <footer>
            <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
            <script src="/js/signup.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        </footer>
    </body>
    </html>




